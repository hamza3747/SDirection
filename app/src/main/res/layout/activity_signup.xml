<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--    This below linear view and above scroll view will be used for scrolling the screen.-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundshadeonLoginandRegisterpage"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/chatbox_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:text="Please enter details"
                    android:textColor="@color/Header_Text_Color"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="330dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_signup_24"
                    app:tint="@color/Icon_Tint_Color" />

                <EditText
                    android:id="@+id/evsSchoolName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/textview_background"
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:hint="School name"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/evSchoolCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/textview_background"
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:hint="School code"
                    android:inputType="number"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/evSchoolContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/textview_background"
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:hint="School contact number"
                    android:inputType="phone"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/evSchoolEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/textview_background"
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:hint="School email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/evUserName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/textview_background"
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:hint="Username"
                    android:inputType="textPersonName"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/evEnterPassword2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/textview_background"
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:hint="Enter password"
                    android:inputType="textPassword"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/evRetypePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/textview_background"
                    android:ems="10"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:hint="Retype password"
                    android:inputType="textPassword"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/btnRegister2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_gradient"
                    android:fontFamily="@font/amaranth"
                    android:text="Register"
                    android:textColor="@color/Whitecolor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/btnLogin2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amaranth"
                    android:gravity="center"
                    android:text="Alraedy have account? Login"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>