<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SDirection" parent="Theme.AppCompat.Light.DarkActionBar">    <!-- We have changed Theme.MaterialComponents.DayNight.DarkActionBar,  Theme.AppCompat.Light.DarkActionBa  because button was not picking color from @drawable files and it was getting color from themes file. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500
        </item>                   <!-- @color/purple_500-->
        <item name="colorPrimaryVariant">@color/Status_Bar_Color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SDirection.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SDirection.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SDirection.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>